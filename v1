<script>
function login(){
    var n=document.getElementById("in").value
    
    if(n.length==0){
    
    return;
    }
    if(n.length>11||n.length<11){
        alert("the length is not valid")
        return;
    }
    if(n.substring(0,2)!="09"){
    alert ("the first two digits are not valid (exampil:09123456789")
    return;
    }
    alert("welcome")
}
